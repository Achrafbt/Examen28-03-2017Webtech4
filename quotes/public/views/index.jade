extends layout

block content
  div.well
    h1 All Quotes
    br
    ul
      each quote in quotes
        li: a(href='/quotes/' + quote._id) #{quote.author}
    br
    br
    a(href='/add') Add new quote
    br
    br
    form(action='search' method='post')
      table
        tr
          td
            label Search : 
          td
            input(type='text' name='search' size=35)
          td(align='right')
            input(type='Submit', value='Search')
